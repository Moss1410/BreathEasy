######### UI Layout: #########
Logic:
    id: root_box
    spacing: 15
    orientation: 'vertical'

    # TITLE PANEL
    BackgroundLabel:
        size_hint: 1, 0.05
        text: 'BreathEasy Ventilator Control Panel'
        color: 0,0,0,1
        background_color: 0.85, 0.85, 0.85, 1

    # GRAPHS & OUTPUTS PANEL
    Logic:
        spacing: 10
        size_hint: 1, 0.8

        # Triple Graph Group
        Logic:
            spacing: 10
            orientation: 'vertical'
            size_hint: 0.8, 1
            id: graph1

            ######################################
            Logic:
                Logic:
                    # Setting the background color
                    canvas:
                        Color:
                            rgba: 0.85, 0.85, 0.85, 1
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    orientation: "vertical"
                    Logic:
                        size_hint: [1, .9]
                        Grapher:
                            id: "graph1"
                            xlabel: ""
                            ylabel: "Oxygen"
                            x_ticks_minor: 5
                            x_ticks_major: 25
                            y_ticks_major: 200
                            y_grid_label: True
                            x_grid_label: True
                            padding: 2
                            x_grid: True 
                            y_grid: True
            ######################################

            ######################################
            Logic:
                Logic:
                    # Setting the background color
                    canvas:
                        Color:
                            rgba: 0.85, 0.85, 0.85, 1
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    orientation: "vertical"
                    Logic:
                        size_hint: [1, .9]
                        Grapher:
                        id: "graph1"
                            xlabel: ""
                            ylabel: "Oxygen"
                            x_ticks_minor: 5
                            x_ticks_major: 25
                            y_ticks_major: 200
                            y_grid_label: True
                            x_grid_label: True
                            padding: 2
                            x_grid: True 
                            y_grid: True
            ######################################

            ######################################
            Logic:
                Logic:
                    # Setting the background color
                    canvas:
                        Color:
                            rgba: 0.85, 0.85, 0.85, 1
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    orientation: "vertical"
                    Logic:
                        size_hint: [1, .9]
                        Grapher:
                            id: "graph1"
                            xlabel: ""
                            ylabel: "Oxygen"
                            x_ticks_minor: 5
                            x_ticks_major: 25
                            y_ticks_major: 200
                            y_grid_label: True
                            x_grid_label: True
                            padding: 2
                            x_grid: True 
                            y_grid: True

            ######################################

        # Output Parameters
        Logic:
            spacing: 5
            size_hint: 0.2, 1
            orientation: "vertical"
            id: outputs_panel

            # Parameter 1
            Logic:
                orientation: 'vertical'
                # Setting the background color
                canvas:
                    Color:
                        rgba: 0.85, 0.85, 0.85, 1
                    Rectangle:
                        size: self.size
                        pos: self.pos
                Label:
                    text_size: outputs_panel.width, None
                    halign: 'left'
                    valign: 'center'
                    text: 'Breath Frequency (b/min):'
                    color: 0,0,0,1
                Label:
                    id: output_1
                    text: '6.5'
                    color: 0,0,0,1
            # Parameter 2
            Logic:
                orientation: 'vertical'
                # Setting the background color
                canvas:
                    Color:
                        rgba: 0.85, 0.85, 0.85, 1
                    Rectangle:
                        size: self.size
                        pos: self.pos
                Label:
                    text_size: outputs_panel.width, None
                    halign: 'left'
                    valign: 'center'
                    text: 'Inspiratory Pressure (cmH2O):'
                    color: 0,0,0,1
                Label:
                    id: output_2
                    text: '164.35'
                    color: 0,0,0,1
            # Parameter 3
            Logic:
                orientation: 'vertical'
                # Setting the background color
                canvas:
                    Color:
                        rgba: 0.85, 0.85, 0.85, 1
                    Rectangle:
                        size: self.size
                        pos: self.pos
                Label:
                    text_size: outputs_panel.width, None
                    halign: 'left'
                    valign: 'center'
                    text: 'Inspiratory Time (s):'
                    color: 0,0,0,1
                Label:
                    id: output_3
                    text: '3'
                    color: 0,0,0,1
            # Parameter 4
            Logic:
                orientation: 'vertical'
                # Setting the background color
                canvas:
                    Color:
                        rgba: 0.85, 0.85, 0.85, 1
                    Rectangle:
                        size: self.size
                        pos: self.pos
                Label:
                    text_size: outputs_panel.width, None
                    halign: 'left'
                    valign: 'center'
                    text: 'PEEP (cmH2O):'
                    color: 0,0,0,1
                Label:
                    id: output_4
                    text: '12.71'
                    color: 0,0,0,1

    # Input Parameters
    Logic:
        spacing: 10
        size_hint: 1, 0.15
        id: inputs_panel

        # Parameter 1
        Logic:
            orientation: 'vertical'
            size_hint: 0.125, 1
            # Setting the background color
            canvas:
                Color:
                    rgba: 0.85, 0.85, 0.85, 1
