######### Kivy Custom Class Devinitions: #########
# Define  background color Template
<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

# BackgroundLogic Class
<BackgroundLogic@Label+BackgroundColor>
    background_color: 0, 0, 0, 0
    # Default the background color for this label
    # to r 0, g 0, b 0, a 0
# Use the BackgroundLogic any where in your kv code like below:
#BackgroundLogic
#    background_color: 1, 0, 0, 1

# BackgroundLabel Class
<BackgroundLabel@Label+BackgroundColor>
    background_color: 0, 0, 0, 0
    # Default the background color for this label
    # to r 0, g 0, b 0, a 0
# Use the BackgroundLabel any where in your kv code like below
#BackgroundLabel
#    text: 'Hello'
#    background_color: 1, 0, 0, 1


######### UI Layout: #########
Logic:
    id: root_box
    spacing: 15
    orientation: 'vertical'

    # TITLE PANEL
    Label:
        size_hint: 1, 0.1
        text: 'BreathEasy Ventilator Control Panel'


    # GRAPHS & OUTPUTS PANEL
    Logic:
        spacing: 10
        size_hint: 1, 0.65

        # Triple Graph Group
        Logic:
            spacing: 10
            orientation: 'vertical'
            size_hint: 0.8, 1
            id: graph

            ######################################
            BoxLayout:
                orientation: "vertical"
                Logic:
                    size_hint: [1, .8]
                    Grapher:
                        id: "graph1"
                        xlabel: ""
                        ylabel: "Oxygen"
                        x_ticks_minor: 5
                        x_ticks_major: 25
                        y_ticks_major: 200
                        y_grid_label: True
                        x_grid_label: True
                        padding: 2
                        x_grid: True 
                        y_grid: True
            ######################################

            ######################################
            BoxLayout:
                orientation: "vertical"
                Logic:
                    size_hint: [1, .8]
                    Grapher:
                        id: graph2
                        xlabel: ""
                        ylabel: "Oxygen"
                        x_ticks_minor: 5
                        x_ticks_major: 25
                        y_ticks_major: 200
                        y_grid_label: True
                        x_grid_label: True
                        padding: 2
                        x_grid: True 
                        y_grid: True
            ######################################

            ######################################
            BoxLayout:
                orientation: "vertical"
                Logic:
                    size_hint: [1, .8]
                    Grapher:
                        id: graph3
                        xlabel: ""
                        ylabel: "Oxygen"
                        #x_ticks_minor: 250
                        x_ticks_major: 1000
                        y_ticks_major: 100
                        y_grid_label: True
                        x_grid_label: True
                        padding: 2
                        x_grid: True 
                        y_grid: True
            ######################################

        # Output Parameters
        Logic:
            spacing: 5
            size_hint: 0.2, 1
            orientation: "vertical"
            id: outputs_panel

            # Parameter 1
            Logic:
                orientation: 'vertical'
                Label:
                    text_size: outputs_panel.width, None
                    halign: 'left'
                    valign: 'center'
                    text: 'Breath Frequency (b/min):'
                Label:
                    id: output_1
                    text: '6.5'
            # Parameter 2
            Logic:
                orientation: 'vertical'
                Label:
                    text_size: outputs_panel.width, None
                    halign: 'left'
                    valign: 'center'
                    text: 'Inspiratory Pressure (cmH2O):'
                Label:
                    id: output_2
                    text: '164.35'
            # Parameter 3
            Logic:
                orientation: 'vertical'
                Label:
                    text_size: outputs_panel.width, None
                    halign: 'left'
                    valign: 'center'
                    text: 'Inspiratory Time (s):'
                Label:
                    id: output_3
                    text: '3'
            # Parameter 4
            Logic:
                orientation: 'vertical'
                Label:
                    text_size: outputs_panel.width, None
                    halign: 'left'
                    valign: 'center'
                    text: 'PEEP (cmH2O):'
                Label:
                    id: output_4
                    text: '12.71'

    # Input Parameters
    Logic:
        spacing: 10
        size_hint: 1, 0.25
        id: inputs_panel

        # Parameter 1
        Logic:
            orientation: 'vertical'
            size_hint: 0.125, 1
            Label:
                text: 'Breath Frequency (b/min):'
                text_size: inputs_panel.width/8, None
                halign: 'center'
                valign: 'center'
            Label:
                text: str(int(input_1.value))
            ProgressBar:
                id: input_1
                min: 0
                max: 10
                value: 1


        # Parameter 2
        Logic:
            orientation: 'vertical'
            size_hint: 0.125, 1
            Label:
                text: 'Inspiratory Pressure (cmH2O):'
                text_size: inputs_panel.width/8, None
                halign: 'center'
                valign: 'center'
            Label:
                text: str(int(input_2.value))
            ProgressBar:
                id: input_2
                min: 0
                max: 10
                value: 5

        # Parameter 3
        Logic:
            orientation: 'vertical'
            size_hint: 0.125, 1
            Label:
                text: 'Inspiratory Time (s):'
                text_size: inputs_panel.width/8, None
                halign: 'center'
                valign: 'center'
            Label:
                text: str(int(input_3.value))
            ProgressBar:
                id: input_3
                min: 0
                max: 10
                value: 7

        # Parameter 4
        Logic:
            orientation: 'vertical'
            size_hint: 0.125, 1
            Label:
                text: 'PEEP (cmH2O):'
                text_size: inputs_panel.width/8, None
                halign: 'center'
                valign: 'center'
            Label:
                text: str(int(input_4.value))
            ProgressBar:
                id: input_4
                min: 0
                max: 10
                value: 3

        # Parameter 5
        Logic:
            orientation: 'vertical'
            size_hint: 0.125, 1
            Label:
                text: 'Pause Time (%/s):'
                text_size: inputs_panel.width/8, None
                halign: 'center'
                valign: 'center'
            Label:
                text: str(int(input_5.value))
            ProgressBar:
                id: input_5
                min: 0
                max: 10
                value: 2

        # Parameter 6
        Logic:
            size_hint: 0.125, 1
            orientation: 'vertical'
            Label:
                text: 'Inspiratory Time (s):'
                text_size: inputs_panel.width/8, None
                halign: 'center'
                valign: 'center'
            Label:
                text: str(int(input_6.value))
            ProgressBar:
                id: input_6
                min: 0
                max: 10
                value: 8

        ################################
        # Alarms Panel
        Logic:
            spacing: 5
            orientation: 'vertical'
            size_hint: 0.25, 1
            Logic:
                Label:
                    text: 'Alarm 1'
                    text_size: inputs_panel.width/16, None
                    halign: 'center'
                    valign: 'center'
                Label:
                    text: 'Alarm 2'
                    text_size: inputs_panel.width/16, None
                    halign: 'center'
                    valign: 'center'
            Logic:
                Label:
                    text: 'Alarm 3'
                    text_size: inputs_panel.width/16, None
                    halign: 'center'
                    valign: 'center'
                Label:
                    text: 'Alarm 4'
                    text_size: inputs_panel.width/16, None
                    halign: 'center'
                    valign: 'center'
        ################################



