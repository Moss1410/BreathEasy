BoxLayout:
    id: root_box
    spacing: 5
    orientation: 'vertical'

    # TITLE PANEL
    Label:
        size_hint: 1, 0.1
        text: 'BreathEasy Ventilator Control Panel'

    # GRAPHS PANEL
    BoxLayout:
        spacing: 5
        size_hint: 1, 0.65
        spacing: 5

        # Triple Graph Group
        BoxLayout:
            spacing: 5
            orientation: 'vertical'
            size_hint: 0.8, 1
            spacing: 5
            
            ######################################
            Logic:
                BoxLayout:
                    orientation: "vertical"
                    BoxLayout:
                        size_hint: [1, .8]
                        Graph:
                            id: graph
                            xlabel: ""
                            ylabel: "Voltage"
                    BoxLayout:
                        size_hint: [1, .2]
                        orientation: "horizontal"
                        Button:
                            text: "START"
                            bold: True
                            on_press: root.start()
                        Button:
                            text: "STOP"
                            bold: True
                            on_press: root.stop()
            ######################################

            ######################################
            Logic:
                BoxLayout:
                    orientation: "vertical"
                    BoxLayout:
                        size_hint: [1, .8]
                        Graph:
                            id: graph
                            xlabel: ""
                            ylabel: "Voltage"
                    BoxLayout:
                        size_hint: [1, .2]
                        orientation: "horizontal"
                        Button:
                            text: "START"
                            bold: True
                            on_press: root.start()
                        Button:
                            text: "STOP"
                            bold: True
                            on_press: root.stop()
            ######################################

            ######################################
            Logic:
                BoxLayout:
                    orientation: "vertical"
                    BoxLayout:
                        size_hint: [1, .8]
                        Graph:
                            id: graph
                            xlabel: ""
                            ylabel: "Voltage"
                    BoxLayout:
                        size_hint: [1, .2]
                        orientation: "horizontal"
                        Button:
                            text: "START"
                            bold: True
                            on_press: root.start()
                        Button:
                            text: "STOP"
                            bold: True
                            on_press: root.stop()
            ######################################

        # Output Parameters
        BoxLayout:
            size_hint: 0.2, 1
            orientation: "vertical"
            id: outputs_panel
            # Parameter 1
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text_size: outputs_panel.width, None
                    halign: 'left'
                    valign: 'center'
                    text: 'Breath Frequency (b/min):'
                Label:
                    id: output_1
                    text: '6.5'
            # Parameter 2
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text_size: outputs_panel.width, None
                    halign: 'left'
                    valign: 'center'
                    text: 'Inspiratory Pressure (cmH2O):'
                Label:
                    id: output_2
                    text: '164.35'
            # Parameter 3
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text_size: outputs_panel.width, None
                    halign: 'left'
                    valign: 'center'
                    text: 'Inspiratory Time (s):'
                Label:
                    id: output_3
                    text: '3'
            # Parameter 4
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text_size: outputs_panel.width, None
                    halign: 'left'
                    valign: 'center'
                    text: 'PEEP (cmH2O):'
                Label:
                    id: output_4
                    text: '12.71'


    # Input Parameters
    BoxLayout:
        size_hint: 1, 0.25
        id: inputs_panel

        # Parameter 1
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.125, 1
            Label:
                text: 'Breath Frequency (b/min):'
                text_size: inputs_panel.width/8, None
                halign: 'center'
                valign: 'center'
            Label:
                id: input_1
                text: '0'
            BoxLayout:
                Button:
                    text: '-'
                    on_press: input_1.text = str(int(input_1.text) - 1)
                Button:
                    text: '+'
                    on_press: input_1.text = str(int(input_1.text) + 1)
        # Parameter 2
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.125, 1
            Label:
                text: 'Inspiratory Pressure (cmH2O):'
                text_size: inputs_panel.width/8, None
                halign: 'center'
                valign: 'center'
            Label:
                id: input_2
                text: '0'
            BoxLayout:
                Button:
                    text: '-'
                    on_press: input_2.text = str(int(input_2.text) - 1)
                Button:
                    text: '+'
                    on_press: input_2.text = str(int(input_2.text) + 1)
        # Parameter 3
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.125, 1
            Label:
                text: 'Inspiratory Time (s):'
                text_size: inputs_panel.width/8, None
                halign: 'center'
                valign: 'center'
            Label:
                id: input_3
                text: '0'
            BoxLayout:
                Button:
                    text: '-'
                    on_press: input_3.text = str(int(input_3.text) - 1)
                Button:
                    text: '+'
                    on_press: input_3.text = str(int(input_3.text) + 1)
        # Parameter 4
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.125, 1
            Label:
                text: 'PEEP (cmH2O):'
                text_size: inputs_panel.width/8, None
                halign: 'center'
                valign: 'center'
            Label:
                id: input_4
                text: '0'
            BoxLayout:
                Button:
                    text: '-'
                    on_press: input_4.text = str(int(input_4.text) - 1)
                Button:
                    text: '+'
                    on_press: input_4.text = str(int(input_4.text) + 1)
        # Parameter 5
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.125, 1
            Label:
                text: 'Pause Time (%/s):'
                text_size: inputs_panel.width/8, None
                halign: 'center'
                valign: 'center'
            Label:
                id: input_5
                text: '0'
            BoxLayout:
                Button:
                    text: '-'
                    on_press: input_5.text = str(int(input_5.text) - 1)
                Button:
                    text: '+'
                    on_press: input_5.text = str(int(input_5.text) + 1)
        # Parameter 6
        BoxLayout:
            size_hint: 0.125, 1
            orientation: 'vertical'
            Label:
                text: 'Inspiratory Time (s):'
                text_size: inputs_panel.width/8, None
                halign: 'center'
                valign: 'center'
            Label:
                id: input_6
                text: '0'
            BoxLayout:
                Button:
                    text: '-'
                    on_press: input_6.text = str(int(input_6.text) - 1)
                Button:
                    text: '+'
                    on_press: input_6.text = str(int(input_6.text) + 1)

        ################################
        # Alarms Panel
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.25, 1
            BoxLayout:
                Label:
                    text: 'Alarm 1'
                    text_size: inputs_panel.width/16, None
                    halign: 'center'
                    valign: 'center'
                Label:
                    text: 'Alarm 2'
                    text_size: inputs_panel.width/16, None
                    halign: 'center'
                    valign: 'center'
            BoxLayout:
                Label:
                    text: 'Alarm 3'
                    text_size: inputs_panel.width/16, None
                    halign: 'center'
                    valign: 'center'
                Label:
                    text: 'Alarm 4'
                    text_size: inputs_panel.width/16, None
                    halign: 'center'
                    valign: 'center'
        ################################



