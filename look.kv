#:import MeshLinePlot kivy.garden.graph.MeshLinePlot
Logic:
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint: [1, .8]
            Graph:
                id: graph
                xlabel: ""
                ylabel: "Oxygen"
                x_ticks_minor: 5
                x_ticks_major: 25
                y_ticks_major: 100
                y_grid_label: True
                x_grid_label: True
                padding: 5
                x_grid: True 
                y_grid: True
        BoxLayout:
            size_hint: [1, .2]
            orientation: "horizontal"
            Button:
                text: "START"
                bold: True
                on_press: root.start()
            Button:
                text: "STOP"
                bold: True
                on_press: root.stop()
            Button:
                text: "Toggle Clear"
                bold: True
                on_press: root.toggle()